<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="674.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mini_rpg_lite_3000_withinterface.GameController">
   <children>
      <Button fx:id="gameBtn" layoutX="175.0" layoutY="349.0" mnemonicParsing="false" onMouseClicked="#updateBtn" prefHeight="26.0" prefWidth="250.0" text="Nouveau combat" />
      <Label layoutX="191.0" layoutY="21.0" text="Combat N°" textAlignment="CENTER">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label fx:id="combatNumberString" layoutX="338.0" layoutY="21.0" text="Label" textAlignment="CENTER">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label fx:id="currentHero" layoutX="20.0" layoutY="88.0" text="Label" textFill="#001eff">
         <font>
            <Font size="40.0" />
         </font>
      </Label>
      <Label fx:id="currentEnemy" layoutX="547.0" layoutY="88.0" text="Label" textFill="#ff0404">
         <font>
            <Font size="40.0" />
         </font>
      </Label>
      <Label layoutX="281.0" layoutY="95.0" text="Vs." textAlignment="CENTER">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Button fx:id="attackBtn" layoutX="213.0" layoutY="233.0" mnemonicParsing="false" onMouseClicked="#handleBtnAttack" prefHeight="26.0" prefWidth="170.0" text="Attaquer" />
      <Button fx:id="defendBtn" layoutX="213.0" layoutY="269.0" mnemonicParsing="false" onAction="#handleBtnDefend" prefHeight="26.0" prefWidth="170.0" text="Se défendre" />
      <Button fx:id="useConsumableBtn" layoutX="213.0" layoutY="304.0" mnemonicParsing="false" onAction="#handleBtnUseConsumable" prefHeight="26.0" prefWidth="170.0" text="Utiliser un consommable" />
      <Label fx:id="whatToDo" layoutX="262.0" layoutY="189.0" text="Que faire ?">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label fx:id="heroData" layoutX="53.0" layoutY="163.0" text="Label" />
      <Label fx:id="enemyData" layoutX="580.0" layoutY="163.0" text="Label" textAlignment="RIGHT" />
      <Label fx:id="actualState" layoutX="286.0" layoutY="154.0">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <ListView fx:id="heroesToHeal" layoutX="213.0" layoutY="157.0" prefHeight="175.0" prefWidth="170.0" />
      <Button fx:id="healBtn" layoutX="215.0" layoutY="349.0" mnemonicParsing="false" onAction="#handleBtnHeal" prefHeight="26.0" prefWidth="170.0" text="Guérir" />
      <ImageView fx:id="armorImg" fitHeight="26.0" fitWidth="28.0" layoutX="114.0" layoutY="82.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/armor.png" />
         </image>
      </ImageView>
      <Button fx:id="foodBtn" layoutX="212.0" layoutY="232.0" mnemonicParsing="false" onAction="#handleBtnFood" prefHeight="26.0" prefWidth="170.0" text="Manger de la nourriture" />
      <Button fx:id="potionBtn" layoutX="213.0" layoutY="270.0" mnemonicParsing="false" onAction="#handleBtnPotion" prefHeight="26.0" prefWidth="170.0" text="Boire une potion" />
      <ListView fx:id="consumables" layoutX="213.0" layoutY="157.0" prefHeight="175.0" prefWidth="170.0" />
   </children>
</AnchorPane>
